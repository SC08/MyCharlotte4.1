<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#90c3f7" />
            <gradient android:angle="-90" android:startColor="#9ac0e6" android:endColor="#5ca0e4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#5ca0e4" />
            <solid android:color="#5ca0e4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#20ccd2" />
            <gradient android:angle="-90" android:startColor="#5ca0e4" android:endColor="#369bd6" />
        </shape>
    </item>

</selector>